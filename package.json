{
  "name": "thriving-studio-theme",
  "version": "1.0.0",
  "description": "A modern, SEO-optimized WordPress theme for creative studios",
  "main": "index.js",
  "scripts": {
    "dev": "npm run watch",
    "build": "npm run build:css && npm run build:js",
    "build:css": "npx tailwindcss -i ./frontend/index.css -o ./frontend/build.css --minify",
    "build:js": "npx terser ./frontend/main.js -o ./frontend/main.min.js -c -m --comments false",
    "watch": "npx tailwindcss -i ./frontend/index.css -o ./frontend/build.css --watch",
    "check:css": "node scripts/check-css.js",
    "rebuild": "npm run build:css && echo 'âœ… CSS rebuilt successfully!'",
    "clean": "rm -rf frontend/node_modules frontend/package-lock.json",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "wordpress",
    "theme",
    "seo",
    "tailwind",
    "responsive"
  ],
  "author": "Thriving Studio Team",
  "license": "GPL-2.0-or-later",
  "type": "commonjs",
  "dependencies": {
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "sharp": "^0.34.3",
    "tailwindcss": "^3.4.3"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "terser": "^5.44.0",
    "vite": "^6.3.5"
  }
}
